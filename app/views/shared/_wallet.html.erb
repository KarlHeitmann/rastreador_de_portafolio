<div class="grid grid-cols-2 gap-4">
  <div>
    <p>
      <strong>Capital inicial:</strong>
      <span id="capital_inicial_value"><%= wallet.capital_inicial %></span>
    </p>

    <p>
      <strong>Capitalizado:</strong>
      <span id="capitalizado"><%= wallet.capitalizado %></span>
    </p>

    <%= form_with(url: add_funds_path(wallet.id), method: :get) do |f| %>
      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <%= f.label :cantidad, class: "label" %>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= f.text_field :cantidad, class: "input" %>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= f.submit class: "button is-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <div>
  </div>
  <div>
  </div>
</div>
